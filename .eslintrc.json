{
    "extends": [
        "airbnb",
        "plugin:prettier/recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "impliedStrict": true,
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "rules": {
        "no-unused-vars": [
            1,
            {
                "argsIgnorePattern": "res|next|^err|props"
            }
        ],
        "react/react-in-jsx-scope": 0,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/no-unescaped-entities": 0,
        "jsx-a11y/anchor-is-valid": [
            1,
            {
                "aspects": [
                    "invalidHref",
                    "preferButton"
                ]
            }
        ],
        "react/jsx-indent": [
            2,
            4
        ],
        "indent": [
            2,
            4
        ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "tabWidth": 4,
                "singleQuote": true,
                "printWidth": 100
            }
        ]
    }
}